{
    "extends": [
      "airbnb",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react",
      "react-hooks",
      "jsx-a11y"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off", // Vite automatically handles React in scope
      "import/no-unresolved": "off", // Disable import resolution issues in Vite
      "jsx-a11y/anchor-is-valid": "off" // Disable specific a11y rule
    }
  }
  